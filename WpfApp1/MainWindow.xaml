<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Arial" FontSize="15">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Expander Header="Компания" IsExpanded="True" Name="company_name" Grid.RowSpan="3">
            <StackPanel Background="LightGray">
                <RadioButton IsChecked="True">Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>

                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                
                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                
                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
            </StackPanel>
        </Expander>

        <GroupBox Header="Компиляторы" Grid.Row="0" Grid.Column="1" Margin="3,3,3,3" Grid.ColumnSpan="2">
            <StackPanel>
                <CheckBox IsChecked="True">Visual Studio</CheckBox>
                <CheckBox>Visual Studio Code</CheckBox>
                <CheckBox>XCode</CheckBox>
                <CheckBox>PyCharm</CheckBox>
                <CheckBox>Spyder</CheckBox>
                <CheckBox IsChecked="True">Pydev</CheckBox>
                <CheckBox>Code Blocks</CheckBox>
                <CheckBox>Dev C++</CheckBox>
            </StackPanel>
        </GroupBox>

        <Button Content="Сохранить выбор" Name="send_button" Grid.Column="1" Grid.Row="1" Margin="25,10,25,10" FontWeight="Bold" Foreground="#3D4653" Background="#8E9F60"/>
        <Button Content="Отменить выбор" Name="drop_button"  Grid.Column="2" Grid.Row="1" Margin="25,10,25,10" FontWeight="Bold" Foreground="#3D4653" Background="#FFAF5D44"/>

        <GroupBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <WrapPanel Margin="0,5,0,0">
                <CheckBox Content="Администратор баз данных"/>
                <CheckBox Content="Администратор вычислительной сети"/>
                <CheckBox Content="Администратор защиты"/>
                <CheckBox Content="Аналитик програмного обеспечения"/>
                <CheckBox Content="Архитектор програмного обеспечения"/>
                <CheckBox Content="Ведущий программист"/>
                <CheckBox Content="Контент-менеджер"/>
                <CheckBox Content="Тестировщик"/>
                <CheckBox Content="Технический писатель"/>
                <CheckBox Content="Системный аналитик"/>
            </WrapPanel>
        </GroupBox>
    </Grid>
</Window>
