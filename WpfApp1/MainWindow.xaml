<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Arial" FontSize="15">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Expander Header="Компания" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,0,533,0">
            <StackPanel Background="LightGray">
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                <RadioButton>Лнит</RadioButton>
                <RadioButton>СКБ Контур</RadioButton>
                <RadioButton>Ростех</RadioButton>
                <RadioButton>Ростелеком</RadioButton>
                <RadioButton>Cisco</RadioButton>
                <RadioButton>Asbis</RadioButton>
                <RadioButton>Лнит</RadioButton>
            </StackPanel>
        </Expander>

        <GroupBox Header="Компиляторы" Grid.Row="0" Grid.Column="1" Margin="3,3,3,3">
            <StackPanel>
                <CheckBox>Visual Studio</CheckBox>
                <CheckBox>Visual Studio Code</CheckBox>
                <CheckBox>XCode</CheckBox>
                <CheckBox>PyCharm</CheckBox>
                <CheckBox>Spyder</CheckBox>
                <CheckBox>Pydev</CheckBox>
                <CheckBox>Code Blocks</CheckBox>
                <CheckBox>Dev C++</CheckBox>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
            <Button Content="Сохранить выбор" Margin="50,10,50,10" Background="#8E9F60"/>
            <Button Content="Отменить выбор" Margin="50,10,50,10" Background="#FFAF5D44"/>
        </StackPanel>
    </Grid>
</Window>
